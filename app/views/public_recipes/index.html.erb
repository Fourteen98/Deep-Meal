<section class="w-full p-8">
  <div class="w-full p-4 flex-col flex gap-6">
    <% if @public_recipes.empty? %>
      <h4>No Recipes</h4>
    <%end %>
    <% @public_recipes.each do |recipe| %>
      <div class="overflow-x-auto relative shadow-md sm:rounded-lg p-4 grid grid-cols-2">
        <div class="flex flex-col gap-4">
          <%= link_to recipe.name, user_recipe_path(current_user, recipe.id), class: "font-bold text-3xl hover:text-darkGrayishBlue" %>
          <div class="text-xs">By: <%= recipe.user.name %></div>
        </div>
        <div class="row-span-2">
          <p><%= recipe.description %></p>
        </div>
      </div>
    <%end %>

  </div>

</section>
