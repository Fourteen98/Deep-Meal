<%= form_with model: @recipe, url: user_recipes_path, class:"w-9/12 grid grid-row-6 gap-4 border-2 p-2 shadow-md sm:rounded-lg" do |form|%>
  <%= form.text_field :name, class: "py-3 px-6", placeholder: 'Recipe Name' %>
  <%= form.number_field :preparation_time, class: "py-3 px-6", placeholder: 'Preparation Time In Hours' %>
  <%= form.number_field :cooking_time, class: "py-3 px-6", placeholder: 'Cooking Time In Hours' %>
  <%= form.text_area :description, class: "py-3 px-6", placeholder: 'Description' %>
  <label for="default-toggle" class="inline-flex relative items-center cursor-pointer">
    <%= form.check_box :public, class:"sr-only peer", id:"default-toggle"%>
    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
    <span class="ml-3 text-xl font-medium text-gray-900 dark:text-gray-300">Public</span>
  </label>
  <div class="w-11/12 flex justify-center">
    <%= form.submit 'Create Recipe', class: 'inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out' %>
  </div>
<%end %>